@model E_Commerce_System.ViewModels.Admin.ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<h2>Available Products</h2>

<p>
    <a asp-action="Dashboard">Back to Dashboard</a> |
    <a asp-action="MyOrders">My Orders</a> |
    <a asp-action="Logout">Logout</a>
</p>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Amount</th>
            <th>Currency</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Products != null && Model.Products.Count > 0)
        {
            foreach (var p in Model.Products)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Amount</td>
                    <td>@p.Currency</td>
                    <td>
                        <form asp-action="PlaceOrder" method="post">
                            <input type="hidden" name="productId" value="@p.Id" />
                            <button type="submit">Order</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5">No products available.</td></tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <div style="margin-top:10px;">
        Page @Model.PageNumber of @Model.TotalPages
        <br />

        @if (Model.PageNumber > 1)
        {
            <a asp-action="Products" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageNumber)
            {
                <strong>@i</strong>
            }
            else
            {
                <a asp-action="Products" asp-route-page="@i">@i</a>
            }
            @:
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="Products" asp-route-page="@(Model.PageNumber + 1)">Next</a>
        }
    </div>
}
