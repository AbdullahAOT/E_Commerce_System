@model E_Commerce_System.ViewModels.Customer.CustomerProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>Edit Profile</h2>

        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label">Name:</label>
                <div class="form-control-plaintext">@Model.Name</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Email:</label>
                <div class="form-control-plaintext">@Model.Email</div>
            </div>

            <hr />

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">New Password (optional)</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Photo" class="form-label">Profile Photo (optional)</label>
                <input asp-for="Photo" type="file" class="form-control" />
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Dashboard">Back to Dashboard</a>
        </div>
    </div>
</div>
