@model E_Commerce_System.ViewModels.Admin.OrderListViewModel

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

<div class="mb-3">
    <a class="btn btn-secondary me-2" asp-action="Dashboard">Back to Dashboard</a>
    <a class="btn btn-outline-primary" asp-action="Products">Browse Products</a>
</div>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Order Id</th>
            <th>Product</th>
            <th>Total Amount</th>
            <th>Currency</th>
            <th>Created (Server)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.Product?.Name</td>
                    <td>@o.Total_Amount</td>
                    <td>@o.Currency</td>
                    <td>@o.Server_DateTime</td>
                    <td>
                        <form asp-action="CancelOrder" method="post" onsubmit="return confirm('Cancel this order?');">
                            <input type="hidden" name="id" value="@o.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6" class="text-center">You have no orders.</td></tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Orders pagination">
        <ul class="pagination">
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="MyOrders" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" asp-action="MyOrders" asp-route-page="@i">@i</a>
                </li>
            }

            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="MyOrders" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
}
