@model E_Commerce_System.ViewModels.Admin.OrderListViewModel

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

<p>
    <a asp-action="Dashboard">Back to Dashboard</a> |
    <a asp-action="Products">Browse Products</a> |
    <a asp-action="Logout">Logout</a>
</p>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Order Id</th>
            <th>Product</th>
            <th>Total Amount</th>
            <th>Currency</th>
            <th>Created (Server)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.Product?.Name</td>
                    <td>@o.Total_Amount</td>
                    <td>@o.Currency</td>
                    <td>@o.Server_DateTime</td>
                    <td>
                        <form asp-action="CancelOrder" method="post">
                            <input type="hidden" name="id" value="@o.Id" />
                            <button type="submit" onclick="return confirm('Cancel this order?');">
                                Cancel
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">You have no orders.</td></tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <div style="margin-top:10px;">
        Page @Model.PageNumber of @Model.TotalPages
        <br />

        @if (Model.PageNumber > 1)
        {
            <a asp-action="MyOrders" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageNumber)
            {
                <strong>@i</strong>
            }
            else
            {
                <a asp-action="MyOrders" asp-route-page="@i">@i</a>
            }
            @:
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="MyOrders" asp-route-page="@(Model.PageNumber + 1)">Next</a>
        }
    </div>
}
