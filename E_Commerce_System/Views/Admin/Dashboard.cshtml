@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-12">
        <h2>Admin Dashboard</h2>

        <p class="lead">Welcome, @ViewBag.AdminName!</p>

        <div class="mb-3">
            <a class="btn btn-outline-primary me-2" asp-action="Customers">Manage Customers</a>
            <a class="btn btn-outline-primary me-2" asp-action="Products">Manage Products</a>
            <a class="btn btn-outline-primary me-2" asp-action="Orders">View Orders</a>
            <a class="btn btn-danger float-end" asp-action="Logout">Logout</a>
        </div>

        <div class="card">
            <div class="card-body">
                <p>Use the links above to manage application data.</p>
            </div>
        </div>
    </div>
</div>
