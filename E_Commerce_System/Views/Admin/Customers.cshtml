@using E_Commerce_System.ViewModels.Admin
@model CustomerListViewModel

@{
    ViewData["Title"] = "Customers";
    var searchId = ViewBag.SearchId as int?;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="m-0">Customers</h2>
            <a class="btn btn-outline-secondary" asp-action="Dashboard">Back to Dashboard</a>
        </div>

        <form asp-action="Customers" method="get" class="row g-2 align-items-end mb-3">
            <div class="col-auto">
                <label for="searchId" class="form-label mb-0">Search by Id</label>
                <input type="number" id="searchId" name="searchId" class="form-control" value="@(searchId?.ToString() ?? "")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
                <a class="btn btn-link" asp-action="Customers">Clear</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Gender</th>
                        <th>Date Of Birth</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Customers != null && Model.Customers.Count > 0)
                    {
                        foreach (var c in Model.Customers)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.Name</td>
                                <td>@c.Email</td>
                                <td>@c.Phone</td>
                                <td>@c.Status</td>
                                <td>@c.Gender</td>
                                <td>@c.Date_Of_Birth.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-primary me-1"
                                       asp-action="EditCustomer"
                                       asp-route-id="@c.Id"
                                       asp-route-page="@Model.PageNumber">Edit</a>

                                    <form asp-action="DeleteCustomerPermanently"
                                          asp-route-page="@Model.PageNumber"
                                          method="post"
                                          style="display:inline"
                                          onsubmit="return confirm('Are you sure you want to delete this customer permanently? This cannot be undone.');">
                                        <input type="hidden" name="id" value="@c.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">No customers found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Customers pagination" class="mt-3">
                <ul class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Customers" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Customers" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Customers" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
