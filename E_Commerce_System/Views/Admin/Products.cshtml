@using E_Commerce_System.ViewModels.Admin
@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-12">
        <h2>Products</h2>

        <div class="mb-3">
            <a class="btn btn-outline-secondary me-2" asp-action="Dashboard">Back to Dashboard</a>
            <a class="btn btn-primary" asp-action="CreateProduct">Create New Product</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:90px">Photo</th>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Amount</th>
                        <th>Currency</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Products != null && Model.Products.Count > 0)
                    {
                        foreach (var p in Model.Products)
                        {
                            <tr>
                                <td>
                                    @if (p.Photo != null && p.Photo.Length > 0)
                                    {
                                        var src = $"data:{p.PhotoContentType};base64,{System.Convert.ToBase64String(p.Photo)}";
                                        <img src="@src" class="img-thumbnail" style="width:64px;height:64px;object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <div class="text-muted small">No image</div>
                                    }
                                </td>
                                <td>@p.Id</td>
                                <td>@p.Name</td>
                                <td>@p.Description</td>
                                <td>@p.Status</td>
                                <td>@p.Amount</td>
                                <td>@p.Currency</td>
                                <td>
                                    <div class="d-flex align-items-center flex-nowrap gap-1">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a>
                                        <form asp-action="DeleteProduct" asp-route-id="@p.Id" method="post" class="m-0">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center">No products found.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Products pagination">
                <ul class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Products" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Products" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Products" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
