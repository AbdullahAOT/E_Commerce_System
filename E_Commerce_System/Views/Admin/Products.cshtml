@using E_Commerce_System.ViewModels.Admin
@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-12">
        <h2>Products</h2>

        <div class="mb-3">
            <a class="btn btn-outline-secondary me-2" asp-action="Dashboard">Back to Dashboard</a>
            <a class="btn btn-primary" asp-action="CreateProduct">Create New Product</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Amount</th>
                    <th>Currency</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Products != null && Model.Products.Count > 0)
                {
                    foreach (var p in Model.Products)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Name</td>
                            <td>@p.Description</td>
                            <td>@p.Status</td>
                            <td>@p.Amount</td>
                            <td>@p.Currency</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary me-1" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a>
                                <form asp-action="DeleteProduct" asp-route-id="@p.Id" method="post" style="display:inline">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="7" class="text-center">No products found.</td></tr>
                }
            </tbody>
        </table>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Products pagination">
                <ul class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Products" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Products" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Products" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
