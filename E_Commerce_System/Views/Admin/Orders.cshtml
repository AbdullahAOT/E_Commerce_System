@using E_Commerce_System.ViewModels.Admin
@model OrderListViewModel

@{
    ViewData["Title"] = "Orders";
    int? customerIdFilter = ViewBag.CustomerIdFilter as int?;
}

<h2>Orders</h2>

<p>
    <a asp-action="Dashboard">Back to Dashboard</a>
</p>

<h3>Search by Customer Id</h3>

<form asp-action="Orders" method="get">
    <label for="customerId">Customer Id:</label>
    <input type="number"
           id="customerId"
           name="customerId"
           value="@(customerIdFilter?.ToString() ?? "")" />
    <button type="submit">Search</button>
    <!-- Clear: reload Orders with no query string -->
    <a asp-action="Orders">Clear</a>
</form>

<hr />

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Id</th>
            <th>Customer Name</th>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Total Amount</th>
            <th>Currency</th>
            <th>Created (Server)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.CustomerId</td>
                    <td>@o.Customer?.Name</td>
                    <td>@o.ProductId</td>
                    <td>@o.Product?.Name</td>
                    <td>@o.Total_Amount</td>
                    <td>@o.Currency</td>
                    <td>@o.Server_DateTime</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="8">No orders found.</td></tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <div style="margin-top:10px;">
        Page @Model.PageNumber of @Model.TotalPages
        <br />

        @if (Model.PageNumber > 1)
        {
            <a asp-action="Orders"
               asp-route-page="@(Model.PageNumber - 1)"
               asp-route-customerId="@(customerIdFilter)">
                Previous
            </a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageNumber)
            {
                <strong>@i</strong>
            }
            else
            {
                <a asp-action="Orders"
                   asp-route-page="@i"
                   asp-route-customerId="@(customerIdFilter)">
                    @i
                </a>
            }
            @:
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="Orders"
               asp-route-page="@(Model.PageNumber + 1)"
               asp-route-customerId="@(customerIdFilter)">
                Next
            </a>
        }
    </div>
}
