@using E_Commerce_System.ViewModels.Admin
@model OrderListViewModel

@{
    ViewData["Title"] = "Orders";
    int? customerIdFilter = ViewBag.CustomerIdFilter as int?;
}

<div class="row">
    <div class="col-12">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2 class="m-0">Orders</h2>
            <a class="btn btn-outline-secondary" asp-action="Dashboard">Back to Dashboard</a>
        </div>

        <form asp-action="Orders" method="get" class="row g-2 align-items-end mb-3">
            <div class="col-auto">
                <label for="customerId" class="form-label mb-0">Customer Id</label>
                <input type="number" id="customerId" name="customerId" class="form-control" value="@(customerIdFilter?.ToString() ?? "")" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Search</button>
                <a class="btn btn-link" asp-action="Orders">Clear</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Id</th>
                        <th>Customer Id</th>
                        <th>Customer Name</th>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Total Amount</th>
                        <th>Currency</th>
                        <th>Created (Server)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Orders != null && Model.Orders.Count > 0)
                    {
                        foreach (var o in Model.Orders)
                        {
                            <tr>
                                <td>@o.Id</td>
                                <td>@o.CustomerId</td>
                                <td>@o.Customer?.Name</td>
                                <td>@o.ProductId</td>
                                <td>@o.Product?.Name</td>
                                <td>@o.Total_Amount</td>
                                <td>@o.Currency</td>
                                <td>@o.Server_DateTime</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="8" class="text-center">No orders found.</td></tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Orders pagination" class="mt-3">
                <ul class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Orders" asp-route-page="@(Model.PageNumber - 1)" asp-route-customerId="@(customerIdFilter)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Orders" asp-route-page="@i" asp-route-customerId="@(customerIdFilter)">@i</a>
                        </li>
                    }

                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="Orders" asp-route-page="@(Model.PageNumber + 1)" asp-route-customerId="@(customerIdFilter)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
