@model E_Commerce_System.ViewModels.OrderListViewModel

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>Product</th>
            <th>Total Amount</th>
            <th>Currency</th>
            <th>Created (Server)</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            foreach (var o in Model.Orders)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.Customer?.Name</td>
                    <td>@o.Product?.Name</td>
                    <td>@o.Total_Amount</td>
                    <td>@o.Currency</td>
                    <td>@o.Server_DateTime</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="6">No orders found.</td></tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <div style="margin-top:10px;">
        Page @Model.PageNumber of @Model.TotalPages
        <br />

        @if (Model.PageNumber > 1)
        {
            <a asp-action="Orders" asp-route-page="@(Model.PageNumber - 1)">Previous</a>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (i == Model.PageNumber)
            {
                <strong>@i</strong>
            }
            else
            {
                <a asp-action="Orders" asp-route-page="@i">@i</a>
            }
            @:
        }

        @if (Model.PageNumber < Model.TotalPages)
        {
            <a asp-action="Orders" asp-route-page="@(Model.PageNumber + 1)">Next</a>
        }
    </div>
}
