@model E_Commerce_System.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Name:</label>
        <input asp-for="Name" />
    </div>

    <div>
        <label>Description:</label>
        <input asp-for="Description" />
    </div>

    <div>
        <label>Status:</label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<E_Commerce_System.Models.CustomerStatus>()"></select>
        @* Or ProductStatus *@
    </div>

    <div>
        <label>Amount:</label>
        <input asp-for="Amount" />
    </div>

    <div>
        <label>Currency:</label>
        <input asp-for="Currency" />
    </div>

    <button type="submit">Save</button>
    <a asp-action="Products">Back to list</a>
</form>

