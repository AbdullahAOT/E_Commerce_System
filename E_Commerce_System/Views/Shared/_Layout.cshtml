@using Microsoft.AspNetCore.Http
@{
    var customerId = Context.Session.GetInt32("CustomerId");
    var customerName = Context.Session.GetString("CustomerName");

    var adminId = Context.Session.GetInt32("AdminId");
    var adminName = Context.Session.GetString("AdminName");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce_System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E_Commerce_System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="mainNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Customer" asp-action="Products">Products</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @* Admin area: show admin dropdown when admin logged in; otherwise show Admin Login only when no customer is logged in *@
                        @if (adminId.HasValue)
                        {
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @(!string.IsNullOrEmpty(adminName) ? adminName : "Admin")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Customers">Manage Customers</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Products">Manage Products</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Orders">View Orders</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else if (!customerId.HasValue)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-dark" asp-controller="Admin" asp-action="Login">Admin Login</a>
                            </li>
                        }

                        @* Customer area: only show customer dropdown if customer logged in AND admin is not logged in.
                           If neither admin nor customer logged in, show Login/Register for customers. *@
                        @if (!adminId.HasValue && customerId.HasValue)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @(!string.IsNullOrEmpty(customerName) ? customerName : "Account")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="EditProfile">Edit Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="MyOrders">My Orders</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Customer" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else if (!adminId.HasValue && !customerId.HasValue)
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="Customer" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Customer" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - E_Commerce_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
